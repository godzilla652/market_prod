<%= form_for [:admin, @entity], html: {class: 'form-task', multipart: true} do |f| %>
  <%= render 'admin/general/form_errors', object: @entity %>

  <%= render 'admin/tasks/edit/photo_inputs', object: @entity, f: f %>


