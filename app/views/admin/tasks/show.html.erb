    padding: 32px 24px 8px 24px;
  }

  .modal-close {
    position: absolute;
    top: 16px;
    right: 24px;
  }

  .modal-close span {
    font-size: 32px;
    line-height: 1;
    color: #E0E0E0;
  }

  .modal-content h2 {
    padding-bottom: 24px;
  }

  .modal-body {
    padding: 0 0 24px 0;
  }

  .modal-footer {
    padding: 0 0 16px 0;
    border: none;
    justify-content: center;
  }

  .modal-footer .btn-default {
    padding: 0 56px;
  }

  .btn-primary {
    height: 32px;
    min-width: 100px;
    background: #14589C;
    box-shadow: 0px 4px 4px rgba(197, 215, 255, 0.5);
    border-radius: 16px;
    border: none;
    padding: 8px 24px;
    font-weight: 400;
    line-height: 1;
    font-size: 14px;
    color: #FFFFFF;
    position: relative;
  }

  .btn-primary:hover {
    background: rgba(20, 88, 156, 0.9);
  }

  .btn-primary:focus,
  .btn-primary:visited {
    color: #FFFFFF;
  }

  .btn-outline {
    height: 32px;
    min-width: 100px;
    border: 1px solid #14589C;
    background-color: #FFFFFF;
    box-sizing: border-box;
    border-radius: 16px;
    padding: 8px 24px;
    font-weight: 400;
    line-height: 1;
    font-size: 14px;
    color: #14589C;
    cursor: pointer;
  }

  .btn-outline:hover {
    background: #14589C;
    border: 1px solid #14589C;
    color: #fff;
  }

  .btn-outline:visited,
  .btn-outline:focus {
    color: #14589C;
    border: 1px solid #14589C;
    background-color: #FFFFFF;
  }

  .btn-primary-rectangle {
    height: 48px;
    background: #14589C;
    border: 1px solid #14589C;
    box-sizing: border-box;
    box-shadow: 0px 4px 10px rgba(20, 88, 156, 0.1);
    border-radius: 2px;
    padding: 14px 56px;
    font-weight: 400;
    line-height: 1;
    font-size: 18px;
    color: #FFFFFF;
    text-transform: uppercase;
    position: relative;
  }

  .btn-primary-rectangle:hover {
    color: #FFFFFF;
    background: rgba(20, 88, 156, 0.9);
  }

  .btn-primary-rectangle:visited,
  .btn-primary-rectangle:focus {
    color: #FFFFFF;
  }

  .task-detail:last-child {
    margin-bottom: 24px !important;
  }

</style>
