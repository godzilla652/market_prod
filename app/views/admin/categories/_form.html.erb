<%= form_for [:admin, @category], html: {class: 'form-task', :multipart => true} do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:" %>
      </h2>
      <ul>
        <% @category.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label' %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :position, :class => 'control-label' %>
    <%= f.number_field :position, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :type, :class => 'control-label' %>
    <%= f.select :typec, ['Contractors', 'Suppliers'], {}, {:class => 'form-control'} %>
  </div>

  <div class="form-group">
    <label class="quote-checkbox-container">
      <%= f.check_box :active, class: 'check-field checkbox-field' %>
      <span class="checkmark"></span>
    </label>
    <label class="control-label" style="padding-left: 24px">Active</label>
  </div>

  <div class="form-group">
    <%= f.submit 'Save', :class => "btn btn-primary-rectangle" %>
  </div>
<% end %>
