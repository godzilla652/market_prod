<%= form_for [:admin, @new_role], remote: true do |f| %>
  <div class="form-group">
    <label class="control-label">Name *</label>
    <%= f.text_field :name, class: "form-control #{'is-invalid' if @new_role.errors[:name].any?}", required: true %>
    <% if @new_role.errors[:name].any? %>
      <div class="invalid-feedback">
        <%= @new_role.errors[:name].first %>
      </div>
    <% end %>
  </div>
  <div class="form-group text-center">
    <%= f.submit 'Save', class: "btn btn-primary-rectangle" %>
  </div>
<% end %>
