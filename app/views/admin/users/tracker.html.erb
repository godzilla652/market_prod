  <div class="text-right">
    <div class="modal-close-btn btn btn-dark">Close</div>
  </div>
  <div class="modal-wrap">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <input id="pac-input" class="form-control" type="text" placeholder="Search Box">
          <div id="map"></div>
        </div>
      </div>
    </div>
  </div>
</div>


<style>
  .edit-modal-window {
    display: none;
    position: fixed;
    z-index: 99;
