<%= form_for [:admin, @project] do |f| %>
  <div class="form-group">
    <label class="control-label">Number *</label>
    <%= f.text_field :number, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <label class="control-label">Name *</label>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <label class="control-label">Address</label>
    <%= f.text_field :address, class: "form-control" %>
  </div>
  <div class="form-group">
    <label class="control-label">Type *</label>
    <%= f.text_field :type_pt, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <label class="control-label">Description</label>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <label class="quote-checkbox-container">
      <%= f.check_box :active, checked: f.object.active? %>
      <span class="checkmark"></span>
    </label>
    <label class="control-label" style="padding-left: 24px">Active</label>

  </div>
  <div class="form-group text-center">
    <%= f.submit 'Save', class: "btn btn-primary-rectangle" %>
  </div>
<% end %>
