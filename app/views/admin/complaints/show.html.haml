.admin-page.show
  .row
    %h1{:class => 'col-sm-offset-3 col-sm-6'}
      = @class_name

  .row
    .col-sm-6.col-sm-offset-3
      %ul
        %li
          %span ID:
          =@entity.id
        %li
          %span Owner:
          = "#{@entity.owner.first_name}" "#{@entity.owner.last_name}"
        %li
          %span User:
          = link_to edit_admin_user_path(@entity.user_id) do
            = "#{@entity.user.first_name}" "#{@entity.user.last_name}"
        %li
          %span Description
          = @entity.description
        %li
          %span Task
          = link_to admin_task_path(@entity.task.id) do
            = @entity.task.title
        %li
          %span Updated:
          =@entity.updated_at
        %li
          %span Created:
          =@entity.created_at
