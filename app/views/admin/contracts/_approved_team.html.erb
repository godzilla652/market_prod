  .page__subheader {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-direction: row;
    flex-direction: row;
    -ms-flex-wrap: nowrap;
    flex-wrap: nowrap;
    -ms-flex-align: center;
    align-items: center;
    padding: 32px 0 0 0;
  }

  .sort_link {
    display: flex;
    color: #C4C5D6;
  }

  .no-padding-tab-section {
    padding-top: 0 !important;
  }
</style>

